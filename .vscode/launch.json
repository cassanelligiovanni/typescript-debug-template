{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      // "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/app.ts", // The entry file (your TypeScript file)
      "preLaunchTask": "tsc: compilazione - tsconfig.json",
      "outFiles": ["${workspaceFolder}/dist/**/*", "!**/node_modules/**"], // Match output directory
      "sourceMaps": true,
      "console": "integratedTerminal"
    }
  ]
}
